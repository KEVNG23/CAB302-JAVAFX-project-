<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" styleClass="root" stylesheets="@profile.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo1.ProfileController">
  <children>
    <VBox layoutX="150.0" layoutY="50.0" spacing="10.0" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="50.0">
      <children>
        <Label styleClass="title" text="Profile Settings" />
        <Separator />
        <HBox spacing="15.0">
          <children>
            <Label styleClass="label" text="Username:" />
            <TextField fx:id="usernameField" promptText="Enter username" styleClass="text-field" />
          </children>
        </HBox>
        <HBox spacing="15.0">
          <children>
            <Label styleClass="label" text="Password:" />
            <PasswordField fx:id="passwordField" promptText="Enter new password" styleClass="text-field" />
            <Button onAction="#onChangePassword" styleClass="button" text="Change" />
          </children>
        </HBox>
        <HBox spacing="15.0">
          <children>
            <Label styleClass="label" text="Email:" />
            <TextField fx:id="emailField" promptText="Enter new email" styleClass="text-field" />
            <Button onAction="#onChangeEmail" styleClass="button" text="Change" />
          </children>
        </HBox>
        <HBox spacing="15.0" />
        <Button onAction="#onSaveChanges" styleClass="button" text="Save Changes" />
        <TextArea fx:id="messageArea" editable="false" prefHeight="37.0" prefWidth="200.0" styleClass="text-area" wrapText="true" />
      </children>
      <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
      </padding>
    </VBox>
  </children>
</AnchorPane>