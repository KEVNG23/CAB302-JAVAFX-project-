<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" styleClass="root" stylesheets="@profile.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo1.Profile.ProfileController">
  <children>
    <AnchorPane layoutX="164.0" layoutY="148.0" AnchorPane.bottomAnchor="-48.0" AnchorPane.leftAnchor="164.0" AnchorPane.rightAnchor="-64.0" AnchorPane.topAnchor="148.0">
      <children>
        <VBox spacing="10.0">
          <children>
            <Label styleClass="title" text="Profile Settings" />
            <Separator prefHeight="3.0" prefWidth="350.0" />
            <HBox spacing="15.0">
              <children>
                <Label styleClass="label" text="Username:" />
                <TextField fx:id="usernameField" promptText="Enter username" styleClass="text-field" />
              </children>
            </HBox>
            <HBox spacing="15.0">
              <children>
                <Label styleClass="label" text="Password:" />
                <PasswordField fx:id="passwordField" promptText="Enter new password" styleClass="text-field" />
                <Button onAction="#onChangePassword" styleClass="button" text="Change" />
              </children>
            </HBox>
            <HBox spacing="15.0">
              <children>
                <Label styleClass="label" text="Email:" />
                <TextField fx:id="emailField" promptText="Enter new email" styleClass="text-field" />
                <Button onAction="#onChangeEmail" styleClass="button" text="Change" />
              </children>
            </HBox>
            <HBox spacing="15.0" />
            <Button onAction="#onSaveChanges" styleClass="button" text="Save Changes" />
            <AnchorPane>
              <children>
                <BorderPane>
                  <center>
                    <ButtonBar>
                      <buttons>
                        <AnchorPane prefHeight="37.0" prefWidth="343.0">
                          <children>
                            <TextArea fx:id="messageArea" editable="false" prefHeight="37.0" prefWidth="344.0" styleClass="text-area" wrapText="true" />
                          </children>
                        </AnchorPane>
                      </buttons>
                    </ButtonBar>
                  </center>
                </BorderPane>
              </children>
            </AnchorPane>
          </children>
          <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
          </padding>
        </VBox>
      </children>
    </AnchorPane>

    <VBox alignment="CENTER" prefHeight="642.0" prefWidth="164.0" spacing="50.0" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="0.0">
      <children>
        <Button fx:id="timerButton" onAction="#handleTimerButtonClick" prefHeight="100.0" prefWidth="150.0" style="-fx-font-size: 18px; -fx-font-weight: normal;" styleClass="home-page-menu-button" text="Timer" />
        <Button fx:id="calendarButton" mnemonicParsing="false" onAction="#handleCalendarButtonClick" prefHeight="100.0" prefWidth="150.0" style="-fx-font-size: 18px; -fx-font-weight: normal;" styleClass="home-page-menu-button" text="Calendar" />
      </children>
      <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </padding>
    </VBox>
  </children>
</AnchorPane>
