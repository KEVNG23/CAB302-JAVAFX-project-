<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="203.0" prefWidth="282.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo1.Calendar.ActivityDialogController">
    <VBox alignment="CENTER" prefHeight="203.0" prefWidth="350.0" spacing="10">
        <Label text="Title:" />
        <TextField fx:id="clientNameField" />

        <Label text="Date:" />
        <DatePicker fx:id="datePicker" />

        <Label text="Priority:" />
        <HBox prefHeight="17.0" prefWidth="272.0">
            <RadioButton fx:id="importantRadioButton" prefHeight="17.0" prefWidth="98.0" text="High" />
            <RadioButton fx:id="averageRadioButton" prefHeight="17.0" prefWidth="101.0" text="Medium" />
            <RadioButton fx:id="notImportantRadioButton" prefHeight="17.0" prefWidth="81.0" text="Low" />
        </HBox>

        <Button onAction="#saveActivity" text="Save" />
    </VBox>
</AnchorPane>
