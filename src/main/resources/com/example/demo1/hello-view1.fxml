<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="com.example.demo1.HelloController">
  <children>
    <VBox layoutX="150.0" layoutY="50.0" spacing="10.0" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="50.0">
      <children>
        <Label style="-fx-font-size: 16px;" text="Profile Settings" />
        <Separator />
        <HBox spacing="15.0">
          <children>
            <Label text="Username:" />
            <TextField fx:id="usernameField" promptText="Enter username" />
          </children>
        </HBox>
        <HBox spacing="15.0">
          <children>
            <Label text="Password:" />
            <PasswordField fx:id="passwordField" promptText="Enter new password" />
            <Button onAction="#onChangePassword" text="Change" />
          </children>
        </HBox>
        <HBox spacing="15.0">
          <children>
            <Label text="Email:" />
            <TextField fx:id="emailField" promptText="Enter new email" />
            <Button onAction="#onChangeEmail" text="Change" />
          </children>
        </HBox>
        <HBox spacing="15.0">
          <children>
            <Label text="Time Spent:" />
            <Label fx:id="timeSpentLabel" text="00:00:00" />
          </children>
        </HBox>
        <Button onAction="#onSaveChanges" text="Save Changes" />
        <TextArea fx:id="messageArea" editable="false" prefHeight="37.0" prefWidth="200.0" wrapText="true" />
      </children>
      <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
      </padding>
    </VBox>
  </children>
</AnchorPane>
