<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.demo1.AccountController.LoginController">
    <center>
        <HBox alignment="TOP_CENTER" BorderPane.alignment="CENTER">
            <children>
                <VBox alignment="TOP_CENTER">
                    <children>
                        <Label text="Username" textFill="#333333">
                            <font>
                                <Font name="Arial" size="14.0" />
                            </font>
                            <VBox.margin>
                                <Insets right="190.0" />
                            </VBox.margin>
                        </Label>
                        <TextField fx:id="usernameField" promptText="enter your username">
                            <VBox.margin>
                                <Insets bottom="20.0" />
                            </VBox.margin>
                            <padding>
                                <Insets bottom="3.0" left="5.0" right="5.0" top="3.0" />
                            </padding>
                            <font>
                                <Font name="Arial" size="14.0" />
                            </font>
                        </TextField>
                        <Label text="Password" textFill="#333333">
                            <font>
                                <Font name="Arial" size="14.0" />
                            </font>
                            <VBox.margin>
                                <Insets right="190.0" />
                            </VBox.margin>
                        </Label>
                        <PasswordField fx:id="passwordField" promptText="enter your password">
                            <padding>
                                <Insets bottom="3.0" left="5.0" right="5.0" top="3.0" />
                            </padding>
                            <VBox.margin>
                                <Insets bottom="3.0" />
                            </VBox.margin>
                        </PasswordField>
                        <Button fx:id="loginButton" mnemonicParsing="false" onAction="#onLoginButtonClick" text="Login" textFill="#5caced">
                            <font>
                                <Font name="Arial Bold" size="14.0" />
                            </font>
                            <padding>
                                <Insets bottom="3.0" left="30.0" right="30.0" top="3.0" />
                            </padding>
                            <VBox.margin>
                                <Insets top="40.0" />
                            </VBox.margin>
                        </Button>
                        <Text fill="#333333" strokeType="OUTSIDE" strokeWidth="0.0" text="Don't have an account?">
                            <font>
                                <Font name="Arial" size="14.0" />
                            </font>
                            <VBox.margin>
                                <Insets top="5.0" />
                            </VBox.margin>
                        </Text>
                        <Hyperlink fx:id="registerLink" onAction="#onRegisterLinkClick" text="Register">
                            <font>
                                <Font name="Arial" size="14.0" />
                            </font>
                        </Hyperlink>
                    </children>
                    <padding>
                        <Insets top="10.0" />
                    </padding>
                    <HBox.margin>
                        <Insets />
                    </HBox.margin>
                    <opaqueInsets>
                        <Insets />
                    </opaqueInsets>
                </VBox>
            </children>
            <padding>
                <Insets bottom="10.0" top="50.0" />
            </padding>
        </HBox>
    </center>
    <top>
        <Label text="Login" textFill="#333333" BorderPane.alignment="CENTER">
            <font>
                <Font name="Arial Bold" size="20.0" />
            </font>
        </Label>
    </top>
    <padding>
        <Insets top="20.0" />
    </padding>
</BorderPane>
